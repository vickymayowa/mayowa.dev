generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Contact {
  id         String   @id @default(cuid())
  name       String
  email      String
  message    String
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("contacts")
}

model AdminCredential {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("admin_credentials")
}

model Blog {
  id        String   @id @default(cuid())
  title     String
  excerpt   String
  author    String
  category  String
  readtime  String
  image     String
  content   String
  date      DateTime @default(now())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("blogs")
}

model Experience {
  id          String   @id @default(cuid())
  role        String
  company     String
  date        String
  description String
  location    String
  highlights  Json
  skills      Json
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("experience")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String
  tags        Json
  demo        String?
  githubLink  String   @map("github_link")
  liveUrl     String   @map("live_url")
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("projects")
}

